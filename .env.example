# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Database URL for Prisma - Session pooler (Vercel compatible)
# Use port 5432 with pgbouncer=true for Session mode pooler
DATABASE_URL=postgresql://postgres:PASSWORD@aws-0-REGION.pooler.supabase.com:5432/postgres?pgbouncer=true

# Direct URL for migrations and introspection
DIRECT_URL=postgresql://postgres:PASSWORD@db.PROJECT_REF.supabase.co:5432/postgres

# Next.js
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000
